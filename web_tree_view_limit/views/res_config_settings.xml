<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.base.view.form.tree.limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_default_rights']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="web_tree_view_limit">
                    <div class="o_setting_right_pane">
                        <label for="web_tree_view_limit"/>
                        <div class="text-muted">
                            Set the number of records shown on tree views per page
                        </div>
                        <field name="web_tree_view_limit"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
