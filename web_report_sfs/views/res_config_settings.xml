<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.base.view.form.web.address.size</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='external_report_layout_id']/../../../.."
                position="after"
            >
                <div class="col-12 col-lg-6 o_setting_box" id="web_address_size">
                    <div class="o_setting_right_pane">
                        <label for="web_address_size" />
                        <div class="text-muted">
                            Web address upper padding
                        </div>
                        <field name="web_address_size" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
