<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="footer" inherit_id="web_report_sfs.footer">
        <xpath expr="//t[@name='company-office']" position="after">
            <div>Bank:
                <t t-if="company.partner_id.bank_ids">
                    <span t-field="company.partner_id.bank_ids[0].bank_name" />
                </t>
            </div>
            <div>IBAN:
                <t t-if="company.partner_id.bank_ids">
                    <span t-field="company.partner_id.bank_ids[0].acc_number" />
                </t>
            </div>
            <div>BIC:
                <t t-if="company.partner_id.bank_ids">
                    <span t-field="company.partner_id.bank_ids[0].bank_bic" />
                </t>
            </div>
        </xpath>
    </template>
</odoo>
